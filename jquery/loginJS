      </form>      
	<script>
		document.querySelector("#submit").onclick = (event) => {
			
			/* 아이디 */
			const id = document.querySelector('input[name="id"]').value.trim();
			const pw = document.querySelector('input[name="pw"]').value.trim();

			if (id.length === 0) {
				alert("아이디를 입력해주세요.");
				event.preventDefault();
			} else if (pw.length === 0) {
				alert("비밀번호를 입력해주세요.");
				event.preventDefault();
			} 
		}
	</script>
